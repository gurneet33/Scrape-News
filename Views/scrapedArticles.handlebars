<div id="container text-center" style="margin: 5%;">
    <div class="row text-center">
        <div class="col-xs-12">
            <h1>Scraped Articles</h1>
        </div>
    </div>
    <div class="row" style="padding-bottom:2%">
        <div class="col-12">
            <a href="/saved"><button>Saved Articles</button></a>
            <a href="/"><button style="margin-left:2%;">Home</button></a>

        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div id="articles" style="padding-right:3%; padding-top:2%">
                <ul>
                    {{#each docs}}
                    <li>
                        <h4 id="title-{{@index}}"><strong>{{this.title}}</strong></h4>
                        <a id="link-{{@index}}" href="{{this.link}}">{{this.link}}</a>
                        <button id={{this._id}} class="save-article"
                            style="padding: 5px 10px; float:right">Save</button>
                    </li>
                    {{/each}}
                </ul>

            </div>
        </div>
    </div>
</div>